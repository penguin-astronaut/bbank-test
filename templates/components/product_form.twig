{% extends 'layout.twig' %}

{% block content %}
    <div class="container">
        <div class="d-flex flex-column">
            <div class="d-flex align-items-center justify-content-center">
                <h1 class="text-center my-4 mx-2">Оформить {{ product }}</h1>
            </div>

            {% if success %}
                <div class="alert alert-success" role="alert">
                    {{ success }}
                </div>
            {% endif %}
            {% if errors.main %}
                <div class="alert alert-danger" role="alert">
                    {{ errors.main }}
                </div>
            {% endif %}
            <div class="container">
                <form method="post">
                    <div class="row">
                        <div class="col-lg-6 col-sm-12">
                            <div class="card">
                                <div class="card-header text-center fw-bold">
                                    Выбрать условия
                                </div>
                                {% block product %}{% endblock %}
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12">
                            <div class="card">
                                <div class="card-header text-center fw-bold">
                                    Информация о заёмщике
                                </div>
                                <div class="card-body">
                                    {% block client %}{% endblock %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center my-5 gap-3">
                        <a href="#" class="btn btn-link">Вернуться на главную</a>
                        <button class="btn btn-primary">Оставить заявку</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        const rate = 20;
        const sumInput = document.querySelector('#sum');
        const termInput = document.querySelector('#term');
        const payInput = document.querySelector('#pay');
        const monthlyRate = rate / 12 / 100;

        sumInput.addEventListener('change', () => {
            calculatePayment();
        })

        termInput.addEventListener('change', () => {
            calculatePayment();
        })

        function calculatePayment()
        {
            if (!sumInput.value || !termInput.value) {
                payInput.value = 0;
                return;
            }
            payInput.value = (sumInput.value * monthlyRate * Math.pow(1 + monthlyRate, termInput.value) / (Math.pow(1 + monthlyRate, termInput.value) -1)).toFixed(2);
        }
    </script>
{% endblock %}